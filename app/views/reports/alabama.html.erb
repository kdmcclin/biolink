<div class="row">
    <div class="large-12 columns">
    	<a href="/alabama"><h2 class="stateheader">Alabama</h2></a>
    	<% if !@reports.empty? || params[:search]%>
    		<%= form_tag(alabama_path, :method => "get", id: "search-form") do %>
	  			<%= text_field_tag :search, params[:search], placeholder: "Search for a Report Within This State" %>
  				<%= submit_tag "Search", :class => "button radius" %>
			<% end %>
		<% end %>
        <%= render partial: 'report_display' %>
    </div>
</div>